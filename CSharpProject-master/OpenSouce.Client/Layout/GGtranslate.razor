<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script type="module"
            src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule
            src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <link href="/css/GGtranslate.css" rel="stylesheet" />
    <title>Google dịch fake </title>
</head>
<body>

    <button id="openChatbox">
        <ion-icon name="translate-outline"></ion-icon>
    </button>

    <div class="chatbox" id="chatbox">
        <div class="container">
            <div class="card input-wrapper">
                <div class="from">
                    <span class="heading">From :</span>
                    <div class="dropdown-container" id="input-language">
                        <div class="dropdown-toggle">
                            <ion-icon name="globe-outline"></ion-icon>
                            <span class="selected" data-value="en">English</span>
                            <ion-icon name="chevron-down-outline"></ion-icon>
                        </div>
                        <ul class="dropdown-menu">
                            <li class="option active">DropDown Menu Item 1</li>
                            <li class="option">DropDown Menu Item 2</li>
                        </ul>
                    </div>
                </div>
                <div class="text-area">
                    <textarea id="input-text"
                              cols="3"
                              rows="1"
                              placeholder="Enter your text here"></textarea>
                </div>
            </div>

            <div class="center">
                <div class="swap-position">
                    <ion-icon name="swap-horizontal-outline"></ion-icon>
                </div>
            </div>

            <div class="card output-wrapper">
                <div class="to">
                    <span class="heading">To :</span>
                    <div class="dropdown-container" id="output-language">
                        <div class="dropdown-toggle">
                            <ion-icon name="globe-outline"></ion-icon>
                            <span class="selected" data-value="vi">Tiếng Việt</span>
                            <ion-icon name="chevron-down-outline"></ion-icon>
                        </div>
                        <ul class="dropdown-menu">
                            <li class="option active">DropDown Menu Item 1</li>
                            <li class="option">DropDown Menu Item 2</li>
                        </ul>
                    </div>
                </div>
                <textarea id="output-text"
                          cols="3"
                          rows="1"
                          placeholder="Translated text will appear here"
                          disabled></textarea>
            </div>
        </div>
    </div>

    <script src="/js/languages.js"></script>
    <script src="/js/script.js"></script>
    <script>
        const openChatboxBtn = document.getElementById('openChatbox');
        const chatbox = document.getElementById('chatbox');

        openChatboxBtn.addEventListener('click', () => {
            chatbox.style.display = 'block';
        });

        // Bắt sự kiện click vào bất kỳ đâu trên trang
        document.addEventListener('click', (event) => {
            // Kiểm tra xem click vào button mở chatbox hay không
            if (event.target !== openChatboxBtn && !chatbox.contains(event.target)) {
                chatbox.style.display = 'none';
            }
        });
    </script>
</body>
</html>
